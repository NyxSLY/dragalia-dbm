{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es5",
    "module": "esnext",
    "removeComments": false,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "sourceMap": true,
    "types": ["autojs-dev"],
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"]
}
